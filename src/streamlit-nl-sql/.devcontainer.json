{
  "name": "streamlit-nl-sql",
  "dockerComposeFile": "docker-compose.yaml",
  "service": "app",
  "shutdownAction": "none",
  "workspaceFolder": "/workspace",
  "postCreateCommand": [
    "./startupscript/post-startup.sh",
    "streamlit",
    "/home/streamlit",
    "${templateOption:cloud}",
    "${templateOption:login}"
  ],
  "postStartCommand": [
    "./startupscript/remount-on-restart.sh",
    "streamlit",
    "/home/streamlit",
    "${templateOption:cloud}",
    "${templateOption:login}"
  ],
  "features": {
    "ghcr.io/devcontainers/features/java:1": {
      "version": "17"
    },
    "ghcr.io/dhoeric/features/google-cloud-cli:1": {}
  },
  "remoteUser": "root",
  "customizations": {
    "workbench": {
      "opens": {
        "extensions": [".py", ".sql", ".csv", ".json", ".md"],
        "fileUrlSuffix": "/?file={path}",
        "folderUrlSuffix": "/?folder={path}"
      }
    }
  }
}
