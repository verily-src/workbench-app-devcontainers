{
  "name": "super vs code app",
  "dockerComposeFile": "docker-compose.yaml",
  "service": "app",
  "shutdownAction": "none",
  "workspaceFolder": "/workspace",
  "postCreateCommand":
    "chown -R user:user /home/user/.config 2>/dev/null || true; ./startupscript/post-startup.sh user /home/user gcp true",
  // re-mount bucket files on container start up
  "postStartCommand": [
    "./startupscript/remount-on-restart.sh",
    "user",
    "/home/user",
    "gcp",
    "true"
  ],
  "features": {
    "./.devcontainer/features/workbench-tools": {
      "cloud": "gcp",
      "username": "root",
      "userHomeDir": "/root"
    },
    "./.devcontainer/features/wb-mcp-server": {
      "username": "root",
      "userHomeDir": "/root"
    }
  },
  "remoteUser": "root",
  "customizations": {
    "workbench": {
      "opens": {
        "extensions": [
          // Source.
          ".c",
          ".cjs",
          ".cpp",
          ".go",
          ".java",
          ".js",
          ".mjs",
          ".php",
          ".scala",
          ".sh",
          ".ts",
          // Documents
          ".md",
          ".html",
          // Data
          ".csv",
          ".json",
          ".jsonc",
          ".tsv",
          ".xml",
          ".yml"
        ],
        "fileUrlSuffix": "?payload=[[\"openFile\",\"vscode-remote:///home/user/{path}\"]]"
      }
    }
  }
}
